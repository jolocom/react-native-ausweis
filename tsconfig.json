{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es2017",
    "removeComments": true,
    "moduleResolution": "node",
    "noLib": false,
    "preserveConstEnums": true,
    "declaration": true,
    "sourceMap": true,
    "suppressImplicitAnyIndexErrors": true,
    "outDir": "./js/",
    "rootDir": "./src/",
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "skipLibCheck": true
  },
  "filesGlob": ["./index.ts", "!./node_modules/**/*.ts"],
  "exclude": ["./js", "./tests/**/*", "./example/**/*"]
}
